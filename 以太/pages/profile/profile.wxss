.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.level {
  font-size: 28rpx;
  color: #FF9800;
}

.stats-container {
  display: flex;
  justify-content: space-between;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.stats-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #1E88E5;
}

.stats-label {
  font-size: 26rpx;
  color: #666;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-left: 8rpx solid #1E88E5;
  padding-left: 15rpx;
}

.badges {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.badge-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.badge-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.badge-item text {
  font-size: 24rpx;
  text-align: center;
}

.badge-item.locked text {
  color: #999;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.history-item:last-child {
  border-bottom: none;
}

.date {
  color: #666;
}

.count {
  color: #1E88E5;
  font-weight: bold;
}
