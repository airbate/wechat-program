.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.question-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.question-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.difficulty {
  color: #FF9800;
  font-weight: bold;
}

.question-content {
  font-size: 32rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.answer-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.option-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.option-item:last-child {
  border-bottom: none;
}

radio {
  margin-right: 20rpx;
  pointer-events: none;
}

.option-item text {
  flex: 1;
  padding: 20rpx 0;
}

input {
  border: 1rpx solid #ddd;
  padding: 20rpx;
  border-radius: 8rpx;
  width: 100%;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

button {
  flex: 1;
}

.solution-container {
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.solution-title {
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #1E88E5;
}
